{
  "name": "express-typescript-template",
  "version": "0.1.0",
  "description": "Custom express typescript webservice",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --platform=node --outdir=dist --bundle --minify --target=node20 --sourcemap --external:pg-native",
    "start": "node .",
    "start:dev": "ts-node-dev --rs --watch .env src/index.ts | pino-pretty",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "lint": "prettier -w .",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/pretty-quick/lib/cli.mjs --staged"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.0.1",
    "express-validator": "^7.2.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.1",
    "morgan": "^1.10.0",
    "pg": "^8.13.1",
    "pino": "^9.5.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.9",
    "@types/pg": "^8.11.10",
    "esbuild": "^0.24.0",
    "jest": "^29.7.0",
    "pino-pretty": "^11.3.0",
    "prettier": "^3.3.3",
    "pretty-quick": "^4.0.0",
    "simple-git-hooks": "^2.11.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tslib": "^2.8.0",
    "typescript": "^5.6.3"
  },
  "engineStrict": true,
  "engines": {
    "node": "^20",
    "npm": "^10"
  },
  "volta": {
    "node": "20.9.0",
    "npm": "10.2.3"
  }
}
